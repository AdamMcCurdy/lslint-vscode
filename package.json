{
    "name": "lslint",
    "displayName": "LSL Linter",
    "description": "Linden Scripting Language (LSL) linter for the virtual world of Second Life scripts",
    "homepage": "",
    "version": "1.0.1",
    "publisher": "Adam Nova",
    "repository": "https://github.com/AdamMcCurdy/lslint-vscode",
    "icon": "sl.png",
    "galleryBanner": {
        "color": "#050523",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:lsl"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "LSLinter",
            "properties": {
                "lsllinter.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable LSL linter"
                },
                "lsllinter.warnOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show warning message if there is an error when saving a file"
                },
                "lsllinter.realtimeLinting": {
                    "type": "boolean",
                    "default": true,
                    "description": "Immediately check for linting errors"
                },
                "lsllinter.interpreter": {
                    "type": "string",
                    "default": "lslint",
                    "description": ""
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^14.11.8",
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    }
}
